#:kivy 2.3.0
<DeckLayout>:
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1, 0.5
        Image:
            id: card1_image
            size_hint: 0.5, 1
            allow_stretch: True
            source: 'images/card1.jpg'
        Image:
            id: card2_image
            size_hint: 0.5, 1
            allow_stretch: True
            source: 'images/card1.jpg'
    Button:
        text: 'Draw Cards'
        on_press: app.draw_cards()
    Label:
        text: root.result_text
